{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "paths": {
      "@/": ["src/*"]
    },
    "types": ["node", "vite/client"]
  },
  "include": ["src", "electron-env.d.ts", "vite.config.ts", "src/shims.d.ts"]
}
